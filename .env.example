# ── Lieutenant Configuration ──────────────────────────────────────────
# Copy to .env and edit as needed.

# Frontend app version (exposed to the UI)
VITE_APP_VERSION=1.0.0

# Ports
VOICE_DAEMON_PORT=8765
GATEWAY_PORT=8800
UI_PORT=5173

# Safety
SAFE_MODE=false

# Optional: OpenAI (enables LLM-backed agent reasoning)
# OPENAI_API_KEY=sk-...

# Optional: Azure Speech Services (enables cloud STT/TTS)
# AZURE_SPEECH_KEY=
# AZURE_SPEECH_REGION=westeurope

# Voice daemon settings
WAKE_PHRASE=υπολοχαγέ
STT_BACKEND=local          # local | azure
TTS_BACKEND=edge           # edge | local | say | azure
STT_MODEL_SIZE=medium      # tiny | base | small | medium | large-v3
TTS_VOICE_GENDER=female    # female | male
VOSK_MODEL_PATH=           # leave blank to auto-download

# Conversation mode (follow-up without wake word)
CONVERSE_MODE=true         # true | false
CONVERSE_TIMEOUT=5.0       # seconds to wait for follow-up speech
MAX_HISTORY=30             # max conversation turns to keep in memory

HF_TOKEN=

# OpenClaw LLM backend (primary agent)
OPENCLAW_TOKEN=
OPENCLAW_WS_URL=ws://127.0.0.1:18789/ws

# Language (el = Greek, en = English)
LANGUAGE=el

# Barge-in tuning (interrupt TTS by speaking)
BARGEIN_RMS_THRESHOLD=0.035
BARGEIN_FRAMES_NEEDED=8
BARGEIN_COOLDOWN_S=1.5
BARGEIN_POST_TTS_GUARD_S=1.2

# Echo guard: suppress STT for N seconds after TTS ends
TTS_ECHO_GUARD_S=0.5